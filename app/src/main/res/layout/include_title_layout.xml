<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/relative"
        android:background="@color/trans_10"
        android:paddingTop="3.0dip"
        android:paddingBottom="3.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
           android:visibility="gone"
            android:clickable="true"
            android:paddingTop="29.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="12.0dip"
            android:paddingBottom="10.0dip"
            android:id="@+id/img_back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:gravity="center"
            android:src="@drawable/back" />
        <!--<View-->
        <!--android:background="@color/common_setting_line"-->
        <!--android:layout_width="1.0px"-->
        <!--android:layout_height="40.0dip"-->
        <!--android:layout_marginLeft="60.0dip"-->
        <!--android:layout_centerVertical="true" />-->
        <TextView
            android:clickable="true"
            android:id="@+id/tv_title"
            android:textSize="20.0sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingTop="29.0dip"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:paddingBottom="10.0dip"
            android:text="@string/app_name"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/img_back"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:paddingTop="17.0dip"
            android:textColor="@color/white"
            android:textSize="16.0sp"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:id="@+id/view_view"
        android:layout_gravity="bottom"
        android:background="@color/common_title_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />
</LinearLayout>